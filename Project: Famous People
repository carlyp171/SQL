SELECT  movies.name, famous_people.name
    FROM movies
    JOIN famous_people
    ON famous_people.id = movies.actor_id 
    OR famous_people.id = movies.actor2_id
    ORDER BY movies.name;
    
SELECT  f.name, s.name 
    FROM famous_people f
    JOIN songs s
    ON f.id = s.singer_id
    ORDER BY f.name;
